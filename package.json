{
  "name": "backend-core-kit",
  "version": "0.1.0",
  "private": true,
  "description": "Production-ready NestJS backend boilerplate (Fastify, Postgres/Prisma, Redis/BullMQ, OpenTelemetry, OpenAPI contract gates).",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/apps/api/src/main.js",
    "start:dev": "nest start --watch",
    "start:worker": "node dist/apps/worker/src/main.js",
    "start:worker:dev": "ts-node --files apps/worker/src/main.ts",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "deps:check": "depcruise --config .dependency-cruiser.cjs --output-type err --validate .dependency-cruiser.cjs apps libs",
    "test": "jest --config jest.config.cjs",
    "test:e2e": "jest --config test/jest-e2e.json --runInBand",
    "verify": "npm run format:check && npm run lint && npm run typecheck && npm run deps:check && npm test && npm run openapi:check && npm run openapi:lint",
    "verify:e2e": "ts-node --files scripts/verify-e2e.ts",
    "openapi:generate": "ts-node --files scripts/openapi-generate.ts",
    "openapi:lint": "spectral lint --fail-severity warn docs/openapi/openapi.yaml",
    "openapi:check": "ts-node --files scripts/openapi-check.ts",
    "deps:up": "docker compose up -d postgres redis",
    "deps:down": "docker compose down",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/platform-fastify": "^11.1.8",
    "@nestjs/swagger": "^11.2.4",
    "@node-rs/argon2": "^2.0.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.209.0",
    "@opentelemetry/resources": "^2.3.0",
    "@opentelemetry/sdk-node": "^0.209.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@prisma/client": "^7.2.0",
    "bullmq": "^5.66.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^5.6.1",
    "ioredis": "^5.9.1",
    "jose": "^6.1.3",
    "nestjs-pino": "^4.5.0",
    "pino": "^10.1.1",
    "qs": "^6.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@nestjs/cli": "^11.0.10",
    "@stoplight/spectral-cli": "^6.15.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.6",
    "@types/qs": "^6.14.0",
    "@types/supertest": "^6.0.2",
    "dependency-cruiser": "^17.3.6",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.3.3",
    "prisma": "^7.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "yaml": "^2.8.2"
  }
}
